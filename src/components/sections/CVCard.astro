---
import { File } from 'lucide-react'
import Card from '../Card.astro'
import { Button } from '../ui/button'

const PDF = '/JG_Resume_11/15/2024.pdf'
---

<Card colSpan="md:col-span-2" rowSpan="md:row-span-2" title="Resume">
  <div class="mt-4 flex w-full justify-center">
    <div
      class="card card-compact md:w-120 lg:w-128 w-96 gap-8 border-[oklch(var(--p))] transition-all"
    >
      <figure>
        <object data={PDF} type="application/pdf" width="100%" height="240px"></object>
      </figure>
      <div class="mt-8 flex flex-col gap-8">
        <div class="card-actions mt-2 flex w-full items-center justify-center">
          <a target="_blank" href={PDF}>
            <Button>
              Download resume
              <File />
            </Button>
          </a>
        </div>
      </div>
    </div>
  </div>
</Card>
